<h1>List of all the users</h1>
<div class="center">
  <%= will_paginate %>
</div>
<% @users.each do |user|%>
<ul class="listing">
  <div class="row">
    <div class="well col-md-4 col-md-offset-4">
      <li><%= link_to gravatar_for(user), user_path(user) %></li>
      <li class="user-name"><%= link_to user.username, user_path(user) %></li>
      <li user-article ><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
    </div>
  </div>
</ul>
<%end%>
<div class="center">
  <%= will_paginate %>
</div>